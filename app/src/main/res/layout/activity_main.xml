<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Konfigurator samochodu"
        android:layout_margin="10dp"
        android:layout_gravity="center"
        android:textSize="30dp"
        android:textColor="#F70D1A"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wybierz rodzaj samochodu"
        android:layout_margin="7.5dp"
        android:textColor="#05480D"
        android:textStyle="bold"
        android:textSize="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/Sedan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Sedan"
                android:textColor="#05480D"
                android:textSize="17dp"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/SUV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="SUV"
                android:textColor="#05480D"
                android:textSize="17dp"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/Hatchback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Hatchback"
                android:textColor="#05480D"
                android:textSize="17dp"
                android:textStyle="bold" />
        </RadioGroup>

        <ImageView
            android:id="@+id/imageCar"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginStart="20dp"
            android:contentDescription="car"
            android:scaleType="centerCrop" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dodatkowe opcje:"
            android:textSize="20dp"
            android:textColor="#F70D1A"
            android:layout_marginRight="10dp"
            android:textStyle="bold"/>

        <CheckBox
            android:id="@+id/klimatyzacja"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Klimatyzacja"
            android:textColor="#05480D"
            android:textStyle="bold"
            android:textSize="15dp"/>

        <CheckBox
            android:id="@+id/skora"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SkÃ³ra"
            android:textColor="#05480D"
            android:textStyle="bold"
            android:textSize="15dp"/>
    </LinearLayout>
  </LinearLayout>